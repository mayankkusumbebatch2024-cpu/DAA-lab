void read1(int a[],int size){
	printf("Enter %d elements : ", size);
	for(int i=0; i <size;i++)
		{
			scanf("%d",&a[i]);
		}
}
int linearSearch(int a[],int index , int size, int key)
{
	if(index >= size)
	{
		return -1;
	}
	if(a[index]==key)
	{
		return index;
	}
	else
	return linearSearch(a, index+1, size, key);
}
